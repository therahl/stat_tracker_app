<!DOCTYPE html>
<html>
<head>
  <title>StatTrackerApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Stat Tracker', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'Home', root_path %>
          </li>
          <li>
            <%= link_to 'Measurements', measurements_path %>
          </li>
          <li>
            <%= link_to 'Photos', photos_path %>
          </li>
          <li>
            <a href="/">Strength</a>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download" aria-expanded="false"><%= current_user.given_name || current_user.email %> <span class="caret"></span></a>
            <ul class="dropdown-menu" aria-labelledby="download">
              <li><a href="/">Settings</a></li>
              <li class="divider"></li>
              <li>
                <%= link_to 'Sign Out', destroy_user_session_path %>
              </li>
            </ul>
          </li>
          <% else %>
          <li>
            <%= link_to 'Sign In', new_user_session_path %>
          </li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>

  </div>
</body>
</html>
