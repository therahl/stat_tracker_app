<!DOCTYPE html>
<html>
<head>
  <title>StatTrackerApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% unless current_user %>
    <%= render 'shared/navigation' %>
  <% end %>
  <% if params['controller'].include? 'users/' %>
    <div class="container">
      <%= yield %>
    </div>
  <% else %>
    <%= yield %>
  <% end %>

</body>
</html>
